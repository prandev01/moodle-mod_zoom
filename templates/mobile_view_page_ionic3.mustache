{{!
    @template mod_zoom2/mobile_view_page_ionic3

    Page to view a zoom2 meeting

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Example context (json):
    {
        "zoom2": {
            "intro": "Introduction String",
            "password": "9836451",
            "recurring": 1,
            "webinar": 1,
            "option_host_video": 1,
            "option_jbh": 1,
            "option_participants_video": 1
        },
        "available": true,
        "status": "Finished",
        "start_time": "Tuesday, June 29, 2021, 1:30 PM",
        "duration": "1 hour",
        "option_audio": "Computer audio and Telephone",
        "cmid": 3,
        "courseid": 3
    }
}}
{{=<% %>=}}
<div>
    <core-course-module-description description="<% zoom2.intro %>" component="mod_zoom2" componentId="<% cmid %>"></core-course-module-description>

    <ion-list>
        <%#available%>
            <ion-item>
                <button ion-button block color="light" core-site-plugins-call-ws name="mod_zoom2_grade_item_update" [params]="{zoom2id: <% cmid %>}" [preSets]="{getFromCache: 0, saveToCache: 0}" (onSuccess)="loadMeeting($event)">
                    {{ 'plugin.mod_zoom2.join_meeting' | translate }}
                </button>
            </ion-item>
        <%/available%>
        <%^available%>
            <ion-item>
                <p>{{ 'plugin.mod_zoom2.unavailable' | translate }}</p>
            </ion-item>
        <%/available%>

        <%#zoom2.recurring%>
            <ion-item>
                <p class="item-heading">{{ 'plugin.mod_zoom2.recurringmeetinglong' | translate }}</p>
            </ion-item>
        <%/zoom2.recurring%>
        <%^zoom2.recurring%>
            <ion-item>
                <p class="item-heading">{{ 'plugin.mod_zoom2.meeting_time' | translate }}</p>
                <p><% start_time %></p>
            </ion-item>
            <ion-item>
                <p class="item-heading">{{ 'plugin.mod_zoom2.duration' | translate }}</p>
                <p><% duration %></p>
            </ion-item>
        <%/zoom2.recurring%>

        <ion-item>
            <p class="item-heading">{{ 'plugin.mod_zoom2.passwordprotected' | translate }}</p>
            <%#zoom2.password%><p>{{ 'core.yes' | translate }}</p><%/zoom2.password%>
            <%^zoom2.password%><p>{{ 'core.no' | translate }}</p><%/zoom2.password%>
        </ion-item>

        <%^zoom2.webinar%>
            <ion-item>
                <p class="item-heading">{{ 'plugin.mod_zoom2.joinbeforehost' | translate }}</p>
                <%#zoom2.option_jbh%><p>{{ 'core.yes' | translate }}</p><%/zoom2.option_jbh%>
                <%^zoom2.option_jbh%><p>{{ 'core.no' | translate }}</p><%/zoom2.option_jbh%>
            </ion-item>
            <ion-item>
                <p class="item-heading">{{ 'plugin.mod_zoom2.starthostjoins' | translate }}</p>
                <%#zoom2.option_host_video%><p>{{ 'core.yes' | translate }}</p><%/zoom2.option_host_video%>
                <%^zoom2.option_host_video%><p>{{ 'core.no' | translate }}</p><%/zoom2.option_host_video%>
            </ion-item>
            <ion-item>
                <p class="item-heading">{{ 'plugin.mod_zoom2.startpartjoins' | translate }}</p>
                <%#zoom2.option_participants_video%><p>{{ 'core.yes' | translate }}</p><%/zoom2.option_participants_video%>
                <%^zoom2.option_participants_video%><p>{{ 'core.no' | translate }}</p><%/zoom2.option_participants_video%>
            </ion-item>
        <%/zoom2.webinar%>

        <ion-item>
            <p class="item-heading">{{ 'plugin.mod_zoom2.option_audio' | translate }}</p>
            <p><% option_audio %></p>
        </ion-item>

        <%^zoom2.recurring%>
            <ion-item>
                <p class="item-heading">{{ 'plugin.mod_zoom2.status' | translate }}</p>
                <p><% status %></p>
            </ion-item>
        <%/zoom2.recurring%>
    </ion-list>
</div>
